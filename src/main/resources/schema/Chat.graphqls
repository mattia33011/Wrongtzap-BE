extend type Query{
    Chat (chatId: String!): DirectChat!
    everyChat: [DirectChat!]
    Group(groupId: String!): GroupChat!
    everyGroup: [GroupChat!]
}



type DirectChat{
    chatId: String!
    creationDate: Int!
    participants: [UserProfile!]!
    messages: [MessageResponse!]
    archived: Boolean!
}

type GroupChat{
    chatId: String!
    name: String!
    creationDate: Int!
    participants : [UserProfile!]!
    participantsDate: [JoinDateResponse!]!
    admins: [UserProfile!]!
    messages: [MessageResponse!]
    archived: Boolean!
}

type ChatResponse{
    name: String!
    chatId: String!
}

type JoinDateResponse{
    userId: String!
    timestamp: Int!
}


