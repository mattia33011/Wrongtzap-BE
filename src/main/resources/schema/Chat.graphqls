extend type Query{
    Chat (chatId: String!): Chat!
    everyChat: [Chat!]
}

type Chat{
    chatId: String!
    name: String!
    participants : [UserProfile!]!
    participantsDate: [JoinDateResponse!]!
    messages: [MessageResponse!]
    isGroup: Boolean!
}

type ChatResponse{
    name: String!
    chatId: String!
}

type JoinDateResponse{
    userId: String!
    timestamp: Int!
}


