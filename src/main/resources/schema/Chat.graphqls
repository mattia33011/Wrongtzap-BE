
extend type Query{
    Chat (chatId: String!): Chat!
    everyChat: [Chat!]
}

scalar LocalDateTime

type Chat{

    chatId: String!
    name: String!
    participants : [UserSummary]!
    participantsDate: [JoinDate!]!
    messages: [MessageSummary!]
    isGroup: Boolean!
}

type JoinDate{
    userId: String!
    timestamp: LocalDateTime!
}

type ChatSummary{
    name: String!
    chatId: String!
}