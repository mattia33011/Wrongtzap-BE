extend type Query{
    Message(messageId: String!): Message!
    searchMessage(messageBody: String!): [Message!]
    everyMessage: [Message!]
}

type Message{

    messageId: String!
    timestamp: LocalDateTime!
    content: String!
    sender: String!
    associatedChat: String!
    deleteForUser: [String]!
}

type MessageSummary{
    sender: String!
    content: String!
    timestamp: LocalDateTime!
}